# Configuration MongoDB
# Pour Docker : mongodb://booklio:booklio_password@localhost:27017/booklio?authSource=admin
# Pour MongoDB local : mongodb://localhost:27017/booklio
MONGO_URI=mongodb://booklio:booklio_password@localhost:27017/booklio?authSource=admin

# Configuration JWT
JWT_ACCESS_SECRET=dev_access_secret_change_in_production
JWT_REFRESH_SECRET=dev_refresh_secret_change_in_production
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d

# Configuration Bcrypt
BCRYPT_SALT_ROUNDS=12

# Configuration serveur
PORT=4000
NODE_ENV=development

# Configuration Google Calendar (optionnel)
GCAL_CLIENT_ID=
GCAL_CLIENT_SECRET=
GCAL_REDIRECT_URI=

# --- MongoDB Production ---
MONGO_HOST=mongo
MONGO_PORT=27017
MONGO_USER=booklio
MONGO_PASSWORD=your_secure_production_password
MONGO_DB=booklio
MONGO_AUTH_SOURCE=admin

# Pour les scripts exécutés sur le serveur de production (hors Docker)
# Décommentez et adaptez selon votre configuration :
# - Si MongoDB est dans Docker et scripts hors Docker : localhost
# - Si MongoDB est distant : utilisez l'IP/hostname distant
MONGO_URI=mongodb://booklio:your_encoded_password@localhost:27017/booklio?authSource=admin

# Configuration JWT (CHANGEZ CES VALEURS EN PRODUCTION!)
JWT_ACCESS_SECRET=change_me_access_secret_production
JWT_REFRESH_SECRET=change_me_refresh_secret_production
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d

# Configuration Bcrypt
BCRYPT_SALT_ROUNDS=12

REQUIRED_HEADER_NAME=x-api-key
REQUIRED_HEADER_VALUE=your_production_api_key

# --- Configuration Serveur ---
NODE_ENV=production
PORT=4000

# --- Frontend build (prod) ---
REACT_APP_API_BASE_URL=/api
